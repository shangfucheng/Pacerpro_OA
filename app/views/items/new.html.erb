<!-- app/views/items/new.html.erb -->

<h1>Create a New Item</h1>

<%= form_with(model: @item, url: items_path) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.submit 'Create Item' %>
  </div>
<% end %>

<%= link_to 'Back to Items', items_path %>
